#: import NoTransition kivy.uix.screenmanager.NoTransition

<ScreenManager>:
    transition: NoTransition()

<HomeScreen>:
    MDFloatingActionButton:
        icon: 'cog'
        pos_hint: {'center_x': .5, 'center_y': .9}
        size_hint_x: .2
        size_hint_y: .06

    MDLabel:
        text: 'JUMBLED STORY'
        pos_hint: {'center_x': .75, 'center_y': .78}

    MDRoundFlatButton:
        text: 'PLAY'
        pos_hint: {'center_x': .5, 'center_y': .3}
        size_hint_x: .3
        size_hint_y: .06
        on_release:
            app.home_to_playing()




<PlayingScreen>:
    canvas.before:
        Color:
            rgba: 0, .0, .2, 3
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 3
        MDBoxLayout:
            size_hint: 1, .14
            orientation: 'horizontal'
            padding: 8

            MDFloatingActionButton:
                icon: 'arrow-left-thin'
                # color: 'white'
                size_hint: None, .9
                pos_hint: {'left': 1}
                on_release:
                    app.playing_to_home()

            MDLabel:
                id: lebol

            MDRoundFlatButton:
                id: levo
                text: str(root.value)
                font_name: "Comic"
                # font_size: 13
                size_hint: None, .9
                pos_hint: {'right': 1}
                on_press:
                    root.opening_level_popup()


        Image:
            source: root.image
            allow_stretch: True
            keep_ratio: False

        GridLayout:
            size_hint: .55, .14
            pos_hint: {"center_x": .5}
            cols: 4
            rows: 1
            spacing: .5
            padding: 3
            Button:
                id: input_one
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                color:  246/255, 200/255, 0/255, 1
            Button:
                id: input_two
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                color:  246/255, 200/255, 0/255, 1
            Button:
                id: input_three
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1

                color:  246/255, 200/255, 0/255, 1
            Button:
                id: input_four
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                color:  246/255, 200/255, 0/255, 1

        GridLayout
            size_hint: .9, .28
            pos_hint: {"center_x": .5}
            cols: 3
            rows: 2
            spacing: .5
            padding: 3
            Button:
                id: one
                text: "1"
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                on_press: root.but_val(1), root.eraseone()
                color:  246/255, 200/255, 0/255, 1
            Button:
                id: two
                text: "2"
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                on_press: root.but_val(2), root.erasetwo()
                color:  246/255, 200/255, 0/255, 1
            Button:
                text: "DEL"
                font_name: "Comic"
                font_size: 13
                background_color: 246/255, 200/255, 0/255, 1
                on_press: root.clear()
                color: 200/255, 250/255, 0/255, 1
            Button:
                id: three
                text: "3"
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                on_press: root.but_val(3), root.erasethree()
                color:  246/255, 200/255, 0/255, 1
            Button:
                id: four
                text: "4"
                font_name: "Comic"
                font_size: 15
                background_color: 246/255, 250/255, 5/255, 1
                on_press: root.but_val(4), root.erasefour()
                color:  246/255, 200/255, 0/255, 1
            Button:
                text: "SHOP"
                font_name: "Comic"
                font_size: 13
                background_color: 246/255, 200/255, 0/255, 1
                color: 200/255, 250/255, 0/255, 1
                on_release: root.bpop()
